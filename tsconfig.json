{
    "compilerOptions": {
      "lib": [
        "DOM",
        "es2015",
        "es2016",
        "es2017"
      ],
      "outDir": "dst",
      "inlineSourceMap": true,
      "jsx": "react",
      "module": "es6",
      "moduleResolution": "node",
      "strict": true,
      "pretty": true,
      "target": "es2017",
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/**/*.ts", "src/**/*.tsx"
    ]
}