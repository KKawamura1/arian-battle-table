.button
    &__delete
        padding: 6px;
        color: #fff;
        width: 100px;
        background-color: #f44242;
        &:hover
            background-color: #d63939;
            cursor: pointer;
    &__primary
        padding: 6px;
        color: #fff;
        margin-left: 20px;
        width: 160px;
        background-color: #4c94ff;
        &:hover
            background-color: #77aeff;
            cursor: pointer;

.input-field
    &__number
        font-size: 16px;
        height: 20px;
        width: 50px;
        border-radius: 3px;
    &__text
        font-size: 16px;
        height: 24px;
        width: 160px;
        border-radius: 3px;


.input-field-with-button
    font: 16px;
    margin: 20px;

.character-table
    font: 16px;
    margin: 20px;
    border-spacing: 12px;
    text-align: center;
    border-spacing: 0px;
    &__character
        td
            width: 80px;
            height: 50px;
        &.--next
            background-color: orange;

.dice-roller
    font: 16px;
    margin: 20px;
    &__dice-count, &__dice-max
        margin: 10px;
        width: 55px;
        height: 30px
        border: 1px solid #bbbbbb;
        font-size: 16px;
    &__roll-button
        margin-left: 10px;
        width: 80px;
        height: 30px;
        background-color: #bbbbbb;
        &:hover
            background-color: #a8a8a8;
            cursor: pointer;
    &__result
        &__sum
            margin: 0px 15px
            font-size: 20px;
        &__critical
            color: #ffd326;
        &__fanble
            color: red;

